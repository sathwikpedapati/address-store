<% layout("layouts/boilerplate") %>
<div class="row  mt-3">
    <h2 class="offset-3"> SignUp for Address Book</h2>
    <div class="col-6 offset-3">
        <form method="post" action="/signup" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label"> Username</label>
                <input type="text"name="username" id="username" class="form-control" required/>
                <div class="invalid-feedback">looks great! </div>
            </div>
            <div class="mb-3">
                <label class="form-label"> Email</label>
                <input type="email"name="email" id="email" class="form-control" required/>
                <div class="invalid-feedback">Email Required! </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password"name="password" id="password" class="form-control" required/>
                <div class="invalid-feedback"> password looks great! </div>
            </div>
            <button class="btn btn-success">
             Signup
            </button>
        </form>

    </div>

</div>