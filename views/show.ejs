<% layout("layouts/boilerplate") %>
<style>
  .details {
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  @media (max-width: 576px) {
    .details {
      flex-direction: column;
      align-items: center;
    }

    .details form {
      width: 100%;
      text-align: center;
    }
  }
</style>

<div class="card text-center" style="margin-top: 6rem;">
  <div class="card-header">
    Owned by <%= lf.owner.username %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Information about <%= lf.name %></h5>
    <p class="card-text">Address: <%= lf.address1 %></p>
    <p class="card-text">(Optional): <%= lf.address2 %></p>
    <p class="card-text">Relationship: <%= lf.relation %></p>
    <p class="card-text">Email ID: <%= lf.email %></p>
    <p class="card-text">Status on social media: <%= lf.socialmedia %></p>
    <div class="details">
      <form action="/address/<%= lf._id %>/edit">
        <button class="btn btn-dark">
          <i class="fa-solid fa-pencil"></i> Edit
        </button>
      </form>
      <form action="/address/<%= lf._id %>?_method=DELETE" method="POST">
        <button class="btn btn-danger">
          <i class="fa-solid fa-trash"></i> Delete
        </button>
      </form>
    </div>
  </div>
  <div class="card-footer text-muted">
    Contact Info: <b><%= lf.phonenumber %></b><br>
    Profession: <b><%= lf.occupation %></b>
  </div>
</div>
